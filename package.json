{
  "name": "@solidlab/sdx",
  "version": "0.8.0",
  "description": "Solid Development Experience toolkit",
  "type": "module",
  "main": "./dist/sdx.js",
  "module": "./dist/sdx.js",
  "types": "./dist/sdx.d.ts",
  "bin": {
    "sdx": "./dist/sdx.js"
  },
  "exports": {
    ".": {
      "require": "./dist/sdx.cjs",
      "import": "./dist/sdx.js",
      "types": "./dist/sdx.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:prod": "cross-env NODE_ENV=production tsup && npm run build:version",
    "build:watch": "npm run build -- --watch",
    "build:install": "npm run build:prod && npm i -g",
    "build:version": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts && tsup --clean=false src/version.ts",
    "start": "node dist/sdx.js",
    "test": "jest --config jest.config.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc src/**/*.ts --write",
    "prepare": "husky install"
  },
  "keywords": [
    "solid",
    "solidlab",
    "sdk",
    "sdx"
  ],
  "author": "thomas.dupont@ugent.be",
  "repository": {
    "url": "https://github.com/SolidLabResearch/sdx.git",
    "type": "git"
  },
  "license": "ISC",
  "dependencies": {
    "@abraham/reflection": "^0.12.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/core": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-generic-sdk": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "axios": "^1.5.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "graphql": "^16.8.1",
    "n3": "^1.17.1",
    "prompts": "^2.4.2",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@graphql-tools/apollo-engine-loader": "^8.0.0",
    "@types/jest": "^29.5.6",
    "@types/n3": "^1.16.3",
    "@types/node": "^18.18.6",
    "@types/prompts": "^2.4.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest-extended": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
